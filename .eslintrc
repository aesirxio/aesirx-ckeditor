{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "error",
        "no-unsafe-optional-chaining": "off",
        "no-case-declarations": "warn"
    },
    "ignorePatterns": [
        "*.json",
        "*.scss",
        "*.svg",
        "*.woff",
        "*.woff2",
        "*.ttf",
        "*.otf",
        "*.eot",
        "*.png",
        "*.dist",
        "*/src/*"
    ]
}